{
  "name": "oman-social-studies-app",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "الكتاب التفاعلي الشامل - دراسات اجتماعية (سلطنة عمان)",
  "author": {
    "name": "Mohammed Darwish",
    "email": "support@example.com"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    
    "// --- WEB BUILD ---": "",
    "build:web": "npm run build",
    
    "// --- WINDOWS BUILD ---": "",
    "dev:electron": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build:windows": "npm run build && electron-builder --win --x64",
    
    "// --- MOBILE BUILDS (Android & iOS) ---": "",
    "open:android": "cap open android",
    "build:android": "npm run build && cap sync android && cap open android",
    "open:ios": "cap open ios",
    "build:ios": "npm run build && cap sync ios && cap open ios",
    
    "generate-icons": "capacitor-assets generate"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/core": "^5.7.0",
    "@capacitor/ios": "^5.7.0",
    "@google/genai": "*",
    "electron-squirrel-startup": "^1.0.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.0",
    "@capacitor/cli": "^5.7.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  }
}